<div class="container">

    <div class="jumbotron">
        <h1>EAT BURGERS!</h1>
        <p>Make the burger. Eat the burger</p>
        <h2>Make your burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Order a Fresh One</label>
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-success" id="addburger">
                        <span class="fa fa-thumbs-up"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel panel-heading" id="leftside"><strong>Order Your burger</strong></div>
                <div class="panel-body"></div>

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                            <span><strong> {{<this.id}} - {{this.burger_name}}</strong></span>
                            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" 
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel panel-heading" id="leftside"><strong>Devour Your Burger</strong></div>
                <div class="panel-body"></div>
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                            <span><strong> {{<this.id}} - {{this.burger_name}}</strong></span>
                            <button type="button" class="trashburger btn btn-warning" id="trashbutton" data-id="{{this.id}}" 
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
            </div>
        </div>
    </div>
</div>